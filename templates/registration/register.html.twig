<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Register</title>
    <link rel="stylesheet" href="form/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="form/css/style.css">
</head>
<body>
    <div class="main">
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    {{ form_errors(registrationForm) }}
                    {{ form_start(registrationForm) }}
                        <h2 class="form-title">Créer un compte</h2>
                        <div class="form-group">
                          {{ form_row(registrationForm.lastname) }}
                        </div>
                         <div class="form-group">
                           {{ form_row(registrationForm.firstname) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(registrationForm.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(registrationForm.plainPassword) }}
                            <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>J'accepte les <a href="#" class="term-service">Condition générale</a></label>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit" value="Créez un compte"/>
                        </div>
                    <p class="loginhere">
                        Vous avez déjà un compte ? <a href="{{ path('login') }}" class="loginhere-link">Connectez vous ici</a>
                    </p>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </section>
    </div>
    <script src="form/vendor/jquery/jquery.min.js"></script>
    <script src="form/js/main.js"></script>
</body>
</html>