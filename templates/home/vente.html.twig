{# Titre de la page #}
{% block title %}Mes actions{% endblock %}

{# Ici vous mettez vos codes HTML et balises Twig au besoin #}
{% block body %}
    <p>Bonjour {{ client }}</p>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

<table>
    <tr>
        <th>Name</th>
        <th>Unitaire Price</th>
        <th>Quantity</th>
        <th>Total Price</th>
    </tr>
    {% for action in actions %}
    <tr>
        <td>{{ action.shareName }}</td>
        <td>{{ action.price }}</td>
        <td>{{ action.quantity }}</td>
        <td>{{ action.totalPrice }}</td>
    </tr>
    {% endfor %}
</table>

{{ form_errors(VenteFormType) }}
{{ form_start(VenteFormType) }}
{{ form_end(VenteFormType) }}